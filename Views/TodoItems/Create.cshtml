@model Todo_app.Data.TodoItem

@{
    ViewData["Title"] = "Create";
}

<h1>Uue pöördumise loomine</h1>
<hr />
<div class="row">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-12">
                <label asp-for="Description" class="control-label">Kirjeldus</label>
                <textarea asp-for="Description" class="form-control" style="height: 150px; width: 100%;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="ItemDueDate" class="control-label">Lahendamise tähtaeg</label>
                <input asp-for="ItemDueDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="ItemDueDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Loo uus pöördumine" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tagasi pöördumiste nimekirja</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

