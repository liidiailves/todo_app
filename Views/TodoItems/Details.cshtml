@model Todo_app.Data.TodoItem

@{
    ViewData["Title"] = "Details";
}

<h1>Pöördumise detailid</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kirjeldus
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Sisestamise aeg
        </dt>
        <dd class="col-sm-10">
            @Model.ItemDate.ToString("dddd, dd MMMM yyyy HH:mm")
        </dd>
        <dt class="col-sm-2">
            Lahendamise tähtaeg
        </dt>
        <dd class="col-sm-10">
            @Model.ItemDueDate.ToString("dddd, dd MMMM yyyy HH:mm")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Muuda</a> |
    <a asp-action="Index">Tagasi pöördumiste nimekirja</a>
</div>

